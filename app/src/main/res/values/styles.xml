<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--CUSTOM TEXT VIEW-->
    <style name="TextViewMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewSmall" parent="TextViewMedium">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="TextViewSuperSmall" parent="TextViewSmall">
        <item name="android:textSize">@dimen/size_min_text_view</item>
    </style>

    <style name="CustomButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="PayButton" parent="CustomButton">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_margin">@dimen/margin_medium</item>
    </style>

    <style name="AppSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_selectable</item>
        <item name="android:padding">@dimen/padding_max</item>
        <item name="android:layout_margin">@dimen/margin_max</item>
    </style>

    <style name="LayoutPayment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/margin_max</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CardLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding_min</item>
    </style>

    <style name="AppLoading" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="CardIconStyle">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_margin">@dimen/margin_min</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>
</resources>
